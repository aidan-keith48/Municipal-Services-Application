<UserControl
    x:Class="Municipal_Services_Application.Views.LocalEvent_Annoucments"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Municipal_Services_Application.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    Background="White"
    mc:Ignorable="d">

    <Grid>
        <!--  Use a grid with two columns, one flexible width for content and one fixed for filters  -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <!--  Flexible width for the rest (content)  -->
            <ColumnDefinition Width="258" />
            <!--  Fixed width for the filter section  -->
        </Grid.ColumnDefinitions>

        <!--  Tab Control for Events and Announcements (on the left)  -->
        <TabControl Grid.Column="0" Margin="20,20,10,10">
            <!--  Events Tab  -->
            <TabItem Header="Local Events">
                <ListBox
                    Margin="0,10,0,0"
                    d:ItemsSource="{d:SampleData ItemCount=5}"
                    ItemsSource="{Binding Events}">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Margin="5">
                                <TextBlock FontWeight="Bold" Text="{Binding EventName}" />
                                <TextBlock Text="{Binding EventDate}" />
                                <TextBlock Text="{Binding EventCategory}" />
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </TabItem>

            <!--  Announcements Tab  -->
            <TabItem Header="Announcements">
                <ListBox
                    Margin="0,10,0,0"
                    d:ItemsSource="{d:SampleData ItemCount=5}"
                    ItemsSource="{Binding Announcements}">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Margin="5">
                                <TextBlock FontWeight="Bold" Text="{Binding AnnouncementTitle}" />
                                <TextBlock Text="{Binding AnnouncementDate}" />
                                <TextBlock Text="{Binding AnnouncementContent}" />
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </TabItem>
        </TabControl>

        <!--  Search and Filter Panel on the right  -->
        <StackPanel
            Grid.Column="1"
            Width="229"
            Margin="10,20,0,20"
            HorizontalAlignment="Left"
            Orientation="Vertical">
            <!--  Search by Category  -->
            <TextBlock
                VerticalAlignment="Center"
                Style="{StaticResource LabelStyle}"
                Text="Category:" />
            <ComboBox
                Width="200"
                Margin="0,5,0,0"
                Style="{StaticResource ComboBoxStyle}">
                <ComboBoxItem Content="All Categories" />
                <ComboBoxItem Content="Music" />
                <ComboBoxItem Content="Sports" />
                <ComboBoxItem Content="Festivals" />
            </ComboBox>

            <!--  Search by Date  -->
            <TextBlock
                Margin="20,10,0,0"
                VerticalAlignment="Center"
                Style="{StaticResource LabelStyle}"
                Text="Date:" />
            <DatePicker
                Width="200"
                Margin="0,5,0,0"
                Style="{StaticResource DatePickerStyle}" />

            <!--  Search Button  -->
            <Button
                Width="200"
                Height="48"
                Margin="0,20,0,0"
                VerticalAlignment="Center"
                BorderThickness="0"
                Content="Search for Content"
                Style="{StaticResource SearchButtonStyle}" />
        </StackPanel>
    </Grid>
</UserControl>
