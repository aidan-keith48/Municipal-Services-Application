<UserControl
    x:Class="Municipal_Services_Application.Views.ReportIssuesView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Municipal_Services_Application.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    Background="{StaticResource MediumBlueBrush}"
    mc:Ignorable="d">
    <Grid>
        <StackPanel Margin="10">
            <!--  Location Input  -->
            <Label Content="Location:" />
            <TextBox
                x:Name="locationTextBox"
                Height="25"
                Margin="0,0,0,10" />

            <!--  Category Selection  -->
            <Label Content="Category:" />
            <ComboBox
                x:Name="categoryComboBox"
                Height="25"
                Margin="0,0,0,10">
                <ComboBoxItem Content="Sanitation" />
                <ComboBoxItem Content="Roads" />
                <ComboBoxItem Content="Utilities" />
            </ComboBox>

            <!--  Description Box  -->
            <Label Content="Description:" />
            <RichTextBox
                x:Name="descriptionRichTextBox"
                MinHeight="100"
                Margin="0,0,0,10" />


            <Button
                x:Name="AttachFileBtn"
                Height="25"
                Margin="0,0,0,10"
                Click="AttachFileBtn_Click"
                Content="Attach File" />

            <Button
                x:Name="SubmitReportBtn"
                Height="25"
                Margin="0,0,0,10"
                Click="SubmitReportBtn_Click"
                Content="Submit Report" />
        </StackPanel>
    </Grid>
</UserControl>
